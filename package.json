{
	"name": "codepackage",
	"displayName": "Code Package",
	"description": "Bundled Code Package",
	"publisher": "spmeesseman",
	"version": "1.0.7",
	"icon": "images/subversion.png",
	"homepage": "https://github.com/spmeesseman/code-package/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/spmeesseman/code-package.git"
	},
	"bugs": {
		"url": "https://github.com/spmeesseman/code-package/issues"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^3.0.2",
		"@semantic-release/git": "^7.0.8",
		"@semantic-release/exec": "^3.3.0",
		"commitizen": "^3.0.7",
		"cz-conventional-changelog": "^2.1.0",
		"semantic-release": "^15.13.3",
		"@types/node": "^11.13.0"
	},
	"scripts": {
		"build": "src\\Build.bat",
		"build-installer": "install\\Build.bat",
		"pj-release": "ant -logger org.apache.tools.ant.listener.AnsiColorLogger -f install/PJDeploy.xml DeployPackage",
		"semantic-release": "semantic-release --no-ci",
		"semantic-release-dry": "semantic-release --dry-run"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"release": {
		"preset": "angular",
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "refactor",
							"release": "patch"
						},
						{
							"type": "style",
							"release": "patch"
						}
					],
					"parserOpts": {
						"noteKeywords": [
							"BREAKING CHANGE",
							"BREAKING CHANGES"
						]
					}
				}
			],
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/changelog",
				{
					"changelogTitle": "Change Log"
				}
			],
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						"install/dist/**"
					]
				}
			],
			"@semantic-release/git"
		]
	}
}
